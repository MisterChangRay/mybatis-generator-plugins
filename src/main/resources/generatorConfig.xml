<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <classPathEntry location="D:\programForDev\mysql-connector-java-5.1.45\mysql-connector-java-5.1.45-bin.jar"/>
    <context id="testTables" targetRuntime="MyBatis3" >
        <!-- 数据Model属性对应Column获取插件        -->
        <plugin type="cn.zr.mybatis.generator.plugins.GeneratorSwagger2Doc">
            <property name="apiModelAnnotationPackage" value="io.swagger.annotations.ApiModel" />
            <property name="apiModelPropertyAnnotationPackage" value="io.swagger.annotations.ApiModelProperty" />
        </plugin>
        <plugin type="cn.zr.mybatis.generator.plugins.GeneratorBatchInsert">
        </plugin>
        <plugin type="cn.zr.mybatis.generator.plugins.GeneratorBatchDelete">
            <property name="enableLogicalDelete" value="true" />
            <property name="tableColName" value="isdeal" />
            <property name="javaPropName" value="isDeal" />
        </plugin>

        <commentGenerator>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true" />
        </commentGenerator>
        <!--数据库连接的信息：驱动类、连接地址、用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/playground?characterEncoding=UTF-8&amp;useSSL=true&amp;serverTimezone=GMT%2B8"
                        userId="root"
                        password="Zr12356789">
        </jdbcConnection>
        <!-- 默认false，把JDBC DECIMAL 和 NUMERIC 类型解析为 Integer，为 true时把JDBC DECIMAL 和
            NUMERIC 类型解析为java.math.BigDecimal -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>
        <!-- targetProject:生成PO类的位置 -->
        <javaModelGenerator targetPackage="com.zr.dao.entity"
                            targetProject="src\main\java">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false" />
            <!-- 从数据库返回的值被清理前后的空格 -->
            <property name="trimStrings" value="true" />
            <!-- 所有实体类继承PageInfo -->
            <!--<property name="rootClass" value="com.zr.common.PageInfo" />-->
        </javaModelGenerator>
        <!-- targetProject:mapper映射文件生成的位置 -->
        <sqlMapGenerator targetPackage="com.zr.dao.xml"
                         targetProject="src\main\java">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false" />
        </sqlMapGenerator>
        <!-- targetPackage：mapper接口生成的位置 -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.zr.dao.mapper"
                             targetProject="src\main\java">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false" />
        </javaClientGenerator>

        <!-- 指定数据库表 -->
        <table tableName="user"><generatedKey column="id" sqlStatement="MySql" identity="true" /></table>
        <table tableName="role"><generatedKey column="id" sqlStatement="MySql" identity="true" /></table>
        <table tableName="permission"><generatedKey column="id" sqlStatement="MySql" identity="true" /></table>
        <table tableName="role_permission_map"></table>
        <table tableName="user_role_map"></table>


        <!-- 有些表的字段需要指定java类型
         <table schema="" tableName="">
            <columnOverride column="" javaType="" />
        </table> -->

    </context>
</generatorConfiguration>